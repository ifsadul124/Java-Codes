class Grandfather {
    String business = "Family Business";
    void company() {
        System.out.println("Grandfather owns the " + business + ".");
    }
}

class Father extends Grandfather {
    String car = "Toyota";

    void car() {
        System.out.println("Father drives a " + car + ".");
    }
}

class Son extends Father {
    String hobby = "Playing Football";

    void hobby() {
        System.out.println("Son's hobby: " + hobby);
    }
}

public class TestMultilevel {
    public static void main(String[] args) {
        Son s = new Son();
        s.company();
        s.car();
        s.hobby();
    }
}
